    }
    function tibetan() {
        $("#exam_four").text("Four");
        $("#exam_one").text("One");
        $("#exam").text("Exam");
        $("#daily_one").text("One");
        $("#daily_four").text("Four");
        $("#daily").text("Practice");
        $("#goBack").text("goBack");
    }
    function changeToCh() {
        jQuery.post(
        "/UserLogin/setLan/",
        { "lan": "ch" },
        function (data) {
            window.location.reload();
        }
        );
    }
    function changeToTibetan() {
        jQuery.post(
            "/UserLogin/setLan/",
            { "lan": "tibetan" },
            function (data) {
                window.location.reload();
            }
        );
    }
    $(document).ready(function () {
        $.ajax({
            type: "post",
            async: false,
            url: "/UserLogin/getLan/",
            data: {},
            success: function (data) {
                if (data != "ch") {
                    tibetan();
                }
                else {
                    Ch();
                }
            }
        });
    });
</script>
