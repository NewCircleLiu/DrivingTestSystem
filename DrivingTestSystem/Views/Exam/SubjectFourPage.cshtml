<script>
    function tibetan_es4() {
        $("#common3").text("common3");
        $("#common2").text("common2");
        $("#common1").text("common1");
        $("#signal").text("signal");
        $("#ground").text("ground");
        $("#sign").text("sign");
        $("#driving").text("driving");
        $("#basic").text("basic");
    }
    function Ch_es4() {
        $("#common3").text("交通常识(3)");
        $("#common2").text("交通常识(2)");
        $("#common1").text("交通常识(1)");
        $("#signal").text("信号");
        $("#ground").text("地面标线");
        $("#sign").text("交通标志");
        $("#driving").text("驾驶技巧");
        $("#basic").text("基础篇");
    }
    $(document).ready(function () {
        $.ajax({
            type: "post",
            async: false,
            url: "/UserLogin/getLan/",
            data: {},
            success: function (data) {
                lan = data;
                if (data != "ch") {
                    tibetan_es4();
                }
                else {
                    Ch_es4();
                }
            }
        });
    });
</script>