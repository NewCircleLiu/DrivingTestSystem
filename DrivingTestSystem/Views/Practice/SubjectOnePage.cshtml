    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("HomePartialView")

<div class="container" style="margin-top: 50px">
    
    <div class="row" id="fh5co-features">
        <div class="col-md-4 col-sm-4 text-center fh5co-feature feature-box">
            <a href="~/Practice/OnePuzzle?ctype=key">
                <img src="~/Resources/img/基础篇.png" class="cate-img">
                <p id="key">关键字</p>
            </a>
        </div>

        <div class="col-md-4 col-sm-4 text-center fh5co-feature feature-box">
            <a href="~/Practice/OnePuzzle?ctype=movie">
                <img src="~/Resources/img/驾驶技巧.png" class="cate-img">
                <p id="movie">动画</p>
            </a>
        </div>

        <div class="col-md-4 col-sm-4 text-center fh5co-feature feature-box">
            <a href="~/Practice/OnePuzzle?ctype=line">
                <img src="~/Resources/img/地面标线.png" class="cate-img">
                <p id="ground">地面标线</p>
            </a>
        </div>

        <div class="col-md-4 col-sm-4 text-center fh5co-feature feature-box">
            <a href="~/Practice/OnePuzzle?ctype=speed">
                <img src="~/Resources/img/交通常识3.png" class="cate-img">
                <p id="speed">速度类问题</p>
            </a>
        </div>

        <div class="col-md-4 col-sm-4 text-center fh5co-feature feature-box">
            <a href="~/Practice/OnePuzzle?ctype=punish">
                <img src="~/Resources/img/交警罚没.png" class="cate-img">
                <p id="punish">罚款判刑类</p>
            </a>
        </div>

        <div class="col-md-4 col-sm-4 text-center fh5co-feature feature-box">
            <a href="~/Practice/OnePuzzle?ctype=light">
                <img src="~/Resources/img/灯光.png" class="cate-img">
                <p id="light">信号灯</p>
            </a>
        </div>

        <div class="col-md-6 col-sm-4 text-center fh5co-feature feature-box">
            <a href="~/Practice/OnePuzzle?ctype=first">
                <img src="~/Resources/img/道路标志.png" class="cate-img">
                <p id="first">先行原则</p>
            </a>
        </div>

        <div class="col-md-6 col-sm-4 text-center fh5co-feature feature-box">
            <a href="~/Practice/OnePuzzle?ctype=safe">
                <img src="~/Resources/img/驾校.png" class="cate-img" style="padding-bottom: 36px">
                <p id="safe">安全行驶</p>
            </a>
        </div>
    </div>
</div>


<script>
    function tibetan_ps1() {
        $("#safe").text("བདེ་འཇགས་གནས་བབ།");
        $("#first").text("སྔོན་དུ་འགྲོ་བའི་རིགས།");
        $("#light").text("བརྡ་རྟགས་གློག་གིི་རིགས།");
        $("#punish").text("ཆད་པ་ཡི་རིགས།");
        $("#speed").text("འགྱོགས ་ཚད་རིགས།");
        $("#ground").text("ཐང་གི་རྟགས།");
        $("#movie").text("འགུལ་རི");
        $("#key").text("གནད་འགག་ཡི་གེ");
    }
    function Ch_ps1() {
        $("#safe").text("安全行驶");
        $("#first").text("先行规则");
        $("#light").text("信号灯");
        $("#punish").text("罚款判刑类");
        $("#speed").text("速度类问题");
        $("#ground").text("地面标识");
        $("#movie").text("动画");
        $("#key").text("关键字");
    }
    $(document).ready(function () {
        $.ajax({
            type: "post",
            async: false,
            url: "/UserLogin/getLan/",
            data: {},
            success: function (data) {
                lan = data;
                if (data != "ch") {
                    tibetan_ps1();
                }
                else {
                    Ch_ps1();
                }
            }
        });
    });
</script>