@{
    ViewBag.Title = "模拟练习_科目4";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("HomePartialView")


<div class="container" style="margin-top: 50px">

    <div class="row" id="fh5co-features">

        <div class="col-md-4 col-sm-4 text-center fh5co-feature feature-box">
            <a href="~/Practice/FourPuzzle?ctype=key">
                <img src="~/Resources/img/基础篇.png" class="cate-img">
                <p id="key">关键字</p>
            </a>
        </div>

        <div class="col-md-4 col-sm-4 text-center fh5co-feature feature-box">
            <a href="~/Practice/FourPuzzle?ctype=movie">
                <img src="~/Resources/img/驾驶技巧.png" class="cate-img">
                <p id="movie">动画</p>
            </a>
        </div>

        <div class="col-md-4 col-sm-4 text-center fh5co-feature feature-box">
            <a href="~/Practice/FourPuzzle?ctype=line">
                <img src="~/Resources/img/地面标线.png" class="cate-img">
                <p id="ground">地面标线</p>
            </a>
        </div>

        <div class="col-md-12 col-sm-4 text-center fh5co-feature feature-box">
            <a href="~/Practice/FourPuzzle?ctype=signal">
                <img src="~/Resources/img/交通信号.png" class="cate-img" style="padding-bottom: 80px">
                <p id="signal">交通信号</p>
            </a>
        </div>
    </div>
</div>
<script>
    function tibetan_ps4() {
        $("#signal").text("བརྡ་རྟགས།");
        $("#ground").text("ཐང་གེ་ཐིག");
        $("#key").text("གནད་འགག་ཡི་གེ");
        $("#movie").text("འགུལ་རི");
    }
    function Ch_ps4() {
        $("#signal").text("信号");
        $("#ground").text("地面标线");
        $("#key").text("关键字");
        $("#movie").text("动画题");
    }
    $(document).ready(function () {
        $.ajax({
            type: "post",
            async: false,
            url: "/UserLogin/getLan/",
            data: {},
            success: function (data) {
                lan = data;
                if (data != "ch") {
                    tibetan_ps4();
                }
                else {
                    Ch_ps4();
                }
            }
        });
    });
</script>
